{
  "name": "toolbox-inventory-app",
  "version": "1.0.0",
  "description": "Desktop inventory management application for toolbox items",
  "author": "OpenWilheilmer <Keidesu02@gmail.com>",
  "company": "JJC Engineering Works and General Services",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder --config electron-builder.config.js",
    "build-win": "npm run build && electron-builder --config electron-builder.config.js --win --publish never",
    "build-mac": "npm run build && electron-builder --config electron-builder.config.js --mac --publish never", 
    "build-linux": "npm run build && electron-builder --config electron-builder.config.js --linux --publish never",
    "dist": "npm run build && electron-builder --config electron-builder.config.js --publish never",
    "pack": "npm run build && electron-builder --config electron-builder.config.js --dir"
  },
  "main": "main.js",
  "build": {
    "appId": "com.jjcengineering.toolbox.inventory",
    "productName": "Toolbox Inventory Manager",
    "copyright": "Copyright Â© 2025 JJC Engineering Works and General Services",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Toolbox Inventory Manager",
      "displayLanguageSelector": false,
      "installerIcon": "public/placeholder-logo.png",
      "uninstallerIcon": "public/placeholder-logo.png",
      "license": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "warningsAsErrors": false,
      "perMachine": false,
      "allowElevation": true,
      "menuCategory": false,
      "guid": "jjc-toolbox-inventory-manager"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/placeholder-logo.png",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "icon": "public/placeholder-logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/placeholder-logo.png"
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "forceCodeSigning": false
  },
  "dependencies": {
    "@hookform/resolvers": "3.10.0",
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-aspect-ratio": "1.1.1",
    "@radix-ui/react-avatar": "1.1.2",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-collapsible": "1.1.2",
    "@radix-ui/react-context-menu": "2.2.4",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-hover-card": "1.1.4",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-menubar": "1.1.4",
    "@radix-ui/react-navigation-menu": "1.2.3",
    "@radix-ui/react-popover": "1.1.4",
    "@radix-ui/react-progress": "1.1.1",
    "@radix-ui/react-radio-group": "1.2.2",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-separator": "1.1.7",
    "@radix-ui/react-slider": "1.2.2",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-switch": "1.1.2",
    "@radix-ui/react-tabs": "1.1.2",
    "@radix-ui/react-toast": "1.2.15",
    "@radix-ui/react-toggle": "1.1.1",
    "@radix-ui/react-toggle-group": "1.1.1",
    "@radix-ui/react-tooltip": "1.1.6",
    "@vercel/analytics": "1.5.0",
    "autoprefixer": "10.4.21",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.0.4",
    "date-fns": "4.1.0",
    "embla-carousel-react": "8.5.1",
    "geist": "1.5.1",
    "input-otp": "1.4.1",
    "lucide-react": "0.454.0",
    "next": "14.2.33",
    "next-themes": "0.4.6",
    "react": "18.3.1",
    "react-day-picker": "9.8.0",
    "react-dom": "18.3.1",
    "react-hook-form": "7.63.0",
    "react-resizable-panels": "2.1.9",
    "recharts": "2.15.4",
    "sonner": "1.7.4",
    "tailwind-merge": "2.6.0",
    "tailwindcss-animate": "1.0.7",
    "vaul": "0.9.9",
    "xlsx": "0.18.5",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.13",
    "@types/node": "22.18.6",
    "@types/react": "18.3.24",
    "@types/react-dom": "18.3.7",
    "concurrently": "9.2.1",
    "cross-env": "10.0.0",
    "electron": "38.1.2",
    "electron-builder": "26.0.12",
    "electron-serve": "3.0.0",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.13",
    "tw-animate-css": "1.3.3",
    "typescript": "5.9.2",
    "wait-on": "9.0.1"
  }
}
